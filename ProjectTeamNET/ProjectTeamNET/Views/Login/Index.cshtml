@model LoginModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@if (ViewBag.Error != null)
{   <div class="container-fluid px-4" style="padding-top: 10px">
    <div class="alert alert-warning mb-2 " role="alert">
        @ViewBag.Error
    </div>
</div>
    
}
<div class="div container ">
    <div style="margin-top: 7%;left: 50%;right: 50%;">
        <form asp-controller="Login" asp-action="Index" method="post" style="left:50%;right:50%">

            <div class="div">
                <div class="form-group ">
                    <input class="form-control col-4 input-login" asp-for="UserName" placeholder="ユーザーID" style="text-transform:uppercase;" type="text">

                </div>
                <div class="form-group">
                    <input type="password" class="form-control col-4 input-login" asp-for="Password" placeholder="バスワード">
                </div>
                <div class="form-group">
                    <div class="form-btn ">
                        <button type="submit" class="btn btn-primary" style="float: left;">ローソン</button>
                        <button asp-controller="Login" asp-action="AutoLogin" class="btn btn-primary" style="float: right;">自動ローソン</button>
                    </div>
                </div>

            </div>
        </form>
    </div>

</div>

