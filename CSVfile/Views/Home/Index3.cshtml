@model CSVfile.Models.FileModel

<form asp-controller="home" asp-action="PetList" method="post" enctype="multipart/form-data" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-12">
            <input asp-for="Csv" class="custom-file-input" placeholder="Csv File"/>
            <label class="custom-file-label">Choose a File...</label>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Export</button>
            </div>
        </div>
    </div>
</form>
@section Scripts{
<script>
    $(document).ready(function () {
        $('.custom-file-input').on('change', function (){
            var filename = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(filename);
        })
    });

</script>
 }